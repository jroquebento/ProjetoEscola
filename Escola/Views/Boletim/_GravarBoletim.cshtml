@model List<Escola.Models.Nota>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("GravarBoletim", "Boletim", FormMethod.Post))
{
<table class="table">
    @if (Model.Count > 0)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(modelItem => Model[i].Id)
            @Html.HiddenFor(modelItem => Model[i].Aluno.Id)
            @Html.HiddenFor(modelItem => Model[i].Aluno.Pessoa.Nome)
            @Html.HiddenFor(modelItem => Model[i].ProfessorDisciplina.Professor.Id)
            @Html.HiddenFor(modelItem => Model[i].ProfessorDisciplina.Professor.Pessoa.Nome)
            @Html.HiddenFor(modelItem => Model[i].ProfessorDisciplina.Id)
            @Html.HiddenFor(modelItem => Model[i].Bimestre.Id)
            @Html.HiddenFor(modelItem => Model[i].Bimestre.Nome)
            @Html.HiddenFor(modelItem => Model[i].Valor)
            @Html.HiddenFor(modelItem => Model[i].Ano)
            @Html.HiddenFor(modelItem => Model[i].DataCadastro)
        }
    }
</table>
    <div class="text-center">
        <div class=" d-flex justify-content-center">
            @if (Model.ToList().Count > 0)
            {
                <div class="form-group">
                    <button type="submit" class="btn btn-success">
                        Gerar Boletim
                    </button>
                </div>
            }
        </div>
    </div>
}


