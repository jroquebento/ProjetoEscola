@model IEnumerable<Escola.Models.Aluno>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Listar", "Aluno", FormMethod.Post))
{
    if (Model.Count() >= 1)
    {
        <table class="table">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Email
                </th>
                <th>
                    RG
                </th>
                <th>
                    CPF
                </th>
                <th>
                    Data de Nascimento
                </th>
                <th>
                    Sexo
                </th>
                <th>
                    Telefone
                </th>
                <th>
                    Curso
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modeItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.RG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso)
            </td>
        </tr>
            }

        </table>
    }
}