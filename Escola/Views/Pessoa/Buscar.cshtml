@model Escola.Models.BuscaPessoaViewModel

@{
    ViewBag.Title = "Buscar";
}

<h2>Buscar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@


        <div class="row">
            <div class="form-group col-sm-4">
                <label class="control-label col-md-2">Nome</label>

                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-sm-2">
                <label class="control-label col-md-2">Cpf</label>

                @Html.TextBoxFor(model => model.Cpf, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-sm-2">
                <label class="control-label col-md-2">RG</label>

                @Html.TextBoxFor(model => model.RG, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RG, "", new { @class = "text-danger" })

            </div>

            <div class="col-sm-2">
                <input type="submit" value="Buscar" class="btn btn-default" />
            </div>

        </div>
    </div>
}

@if (Model != null)
{
    @Html.Partial("_Listar", Model.ListaPessoas);
}

<div>
    @Html.ActionLink("Voltar para a lista", "Index")
</div>


