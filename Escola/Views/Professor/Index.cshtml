@model IEnumerable<Escola.Models.Professor>

@{
    ViewBag.Title = "Professor";
}

<h2>Professor</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Nome
        </th>
        <th>
            Salário
        </th>
        <th>
            Formação
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Pessoa.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Salario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Formacao)
    </td>
 
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id })
    </td>
</tr>
}

</table>
