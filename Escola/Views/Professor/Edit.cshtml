@model Escola.Models.Professor

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Professor</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class="control-label col-md-2">Nome</label>
        <div class="col-md-10">
            @Html.DropDownListFor(
           model => model.Pessoa.Id,
           new SelectList(Model.ListaPessoas, "Id", "Nome"),
           new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pessoa.Id, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Salário</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Salario, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Salario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Formação</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Formacao, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Formacao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ativo</label>
        <div class="col-md-10">
            Sim
            @Html.RadioButtonFor(model => model.Ativo, "1", new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
            Não
            @Html.RadioButtonFor(model => model.Ativo, "0", new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar para a lista", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
