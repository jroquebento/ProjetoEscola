@model Escola.Models.Nota

@{
    ViewBag.Title = "Create";
}

<h2>Criar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Nota</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Nome</label>
        <div class="col-md-10">
            @Html.DropDownListFor(
           model => model.Aluno.Id,
           new SelectList(Model.ListaAlunos, "Id", "Pessoa.Nome"),
           "Selecione ...",
           new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.Aluno.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">ProfessorxDisciplina</label>
        <div class="col-md-10">
            @Html.DropDownListFor(
           model => model.ProfessorDisciplina.Id,
           new SelectList(Model.ListaProfessorDisciplinas, "Item1", "Item2"),
           "Selecione ...",
           new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.ProfessorDisciplina.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Bimestre</label>
        <div class="col-md-10">
            @Html.DropDownListFor(
           model => model.Bimestre.Id,
           new SelectList(Model.ListaBimestres, "Id", "Nome"),
           "Selecione ...",
           new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.Bimestre.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Valor</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ano</label>
        <div class="col-md-10">
            @Html.DropDownListFor(
           model => model.Ano,
           new SelectList(Model.ListaAnos, "Item1", "Item2"),
           "Selecione ...",
           new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.Ano, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ativo</label>
        <div class="col-md-10">
            Sim
            @Html.RadioButtonFor(model => model.Ativo, "1", new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
            Não
            @Html.RadioButtonFor(model => model.Ativo, "0", new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Criar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar para a lista", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
